<h1 class="text-center">Project stories</h1>
<div class="row">
  <div class="col-lg-12">
    {{#link-to "projects.project.stories.new" class="btn btn-success full-width"}}
      <div class="row">
        <div class="col-md-1">
          <span class="glyphicon glyphicon-plus"></span>
        </div>
        <div class="col-md-10">
          Add New Story
        </div>
        <div class="col-md-1">
          <span class="glyphicon glyphicon-plus"></span>
        </div>
      </div>
    {{/link-to}}
  </div>
  <div class="col-lg-6">
    {{dashboard-story-panel storyType="Active" stories=project.activeStories noDrop=true}}
  </div>
  <div class="col-lg-6">
    {{dashboard-story-panel storyType="Dropped" stories=project.dropped noDrop=true}}
  </div>

</div>
