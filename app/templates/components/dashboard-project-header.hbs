<div class="panel panel-primary">
  <div class="panel-heading">
    <div class="row">
      <div class="col-xs-7">
        <div class="well well-sm">
          <h3 class="panel-title text-center">{{project.user.username}}'s Project: '{{project.name}}'</h3>
        </div>
      </div>
      <div class="col-xs-5">
        <div class="well well-sm">
          <div class="col-xs-5">
            <strong class="project-status text-center">{{project.progress}}% Complete</strong>
          </div>
          <div class="cols-xs-7">
            {{project-progress project=project}}
          </div>

        </div>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <div class="col-xs-3">
      <p>{{project.description}}</p>
      <p><a href="{{project.github}}">Github</a></p>
    </div>
    <div class="col-xs-3 text-center">
        {{project-story-chart-icebox project=project}}
      </div>
      <div class="col-xs-3 text-center">
        {{project-story-chart-current project=project}}
      </div>
      <div class="col-xs-3 text-center">
        {{project-story-chart-done project=project}}
      </div>
  </div>

  {{#if dashboard}}
    <div class="row dashboard-nav">
      <div class="col-xs-2">
        {{link-to "Project Details" "projects.project" project.id class="full-width btn btn-primary"}}
      </div>
      <div class="col-xs-2">
        {{link-to "Stories" "dashboard.project.stories" project class="full-width btn btn-success"}}
      </div>
      <div class="col-xs-2">
        {{link-to "Snippets" "dashboard.project.snippets" project class="full-width btn btn-success"}}
      </div>
      <div class="col-xs-2">
        {{link-to "Bookmarks" "dashboard.project.bookmarks" project class="full-width btn btn-success"}}
      </div>
    </div>


  {{else}}
    {{link-to "Project Dashboard" "dashboard.project" project.id class="btn btn-primary"}}
  {{/if}}
</div>
{{yield}}
