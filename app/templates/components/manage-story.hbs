{{yield}}
<form class="form-horizontal" {{action "submit" on="submit"}}>
  <div class="form-group">
    <label for="story-name">Story Name</label>
    {{input value=story.name class="form-control" id="story-name"}}
  </div>
  <div class="form-group">
    <label for="story-description">Description</label>
    {{input value=story.description class="form-control" id="story-description"}}
  </div>
  <div class="form-group">
    <label for="story-points">Points</label>
    {{view "select" content=points value=story.points id="story-points" class="form-control"}}
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>